<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.katherineplazas.lab02.RegistroConductorActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/r_conductor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="@string/registro_conductor"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/silver"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <EditText
                    android:hint="@string/correo"
                    android:textColorHint="@color/black"
                    android:id="@+id/eMailConductor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textWebEmailAddress"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:background="@color/silver"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/ePasswordCond"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:hint="@string/contrasena"
                    android:textColorHint="@color/black"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:background="@color/silver"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/ePassword2Cond"
                    android:layout_width="match_parent"
                    android:hint="@string/repetircontrasena"
                    android:textColorHint="@color/black"
                    android:inputType="textPassword"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:background="@color/silver"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/eNombreCond"
                    android:layout_width="match_parent"
                    android:hint="@string/nombre"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/black"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="@color/silver"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/eCedulaCond"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:hint="@string/cedula"
                    android:textColorHint="@color/black"
                    android:textSize="15dp"/>



            </LinearLayout>
            <LinearLayout

                android:layout_margin="2dp"
                android:background="@color/silver"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/ePlaca"
                    android:hint="@string/placa"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:background="@color/silver"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/eCiudad"
                    android:hint="@string/residencia"
                    android:textColorHint="@color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/eTelefono"
                    android:hint="@string/telefono"
                    android:textColorHint="@color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textSize="15dp"/>



            </LinearLayout>

            <LinearLayout

                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/silver">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/Subir_Fotos"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/black"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="OnRegistrarConductorClicked"
                    android:text="@string/registarse"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:background="@color/darkorange"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>

    </LinearLayout>
